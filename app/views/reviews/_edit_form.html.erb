<%= form_with(model: [tour, review]) do |f| %>
  <div class="d-flex align-items-center">
    <div class="star-rating-edit">
      <%= f.hidden_field :rating, value: review.rating, id: "rating-field-edit" %>
      <% for i in eval(Settings.star_range) %>
        <span class="star-edit <%= i <= review.rating ? "text-warning" : "" %>"
              data-value="<%= i %>">
          <i class="fa fa-star"></i>
        </span>
      <% end %>
    </div>
  </div>
  <div data-mdb-input-init class="form-outline">
    <%= f.text_area :comment, class: "form-control", id: "textAreaExample",
          rows: Settings.digit_3, placeholder: t("review_placeholder") %>
  </div>

  <%= f.hidden_field :tour_id %>
  <%= f.hidden_field :user_id, value: current_user&.id %>

  <div class="d-flex justify-content-end my-2">
    <%= f.submit t("update"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="home">
  <div class="row">
    <%= image_tag("home_bg.jpg", alt: t("logo"), class: "home-section-img") %>
    <div class="home-section d-flex">
      <div class="home-section-left col-6 text-center">
        <%= link_to tours_path do %>
          <div class="home-section-item d-flex flex-column align-items-center justify-content-center">
            <h4 class="text-bold"><%= t "view_tour" %></h4>
            <p><%= t "view_tour_description" %></p>
          </div>
        <% end %>
      </div>
      <div class="home-section-right col-6 text-center">
        <%= link_to tours_path do %>
          <div class="home-section-item d-flex flex-column align-items-center justify-content-center">
            <h4 class="text-bold"><%= t "booked" %></h4>
            <p><%= t "booked_description" %></p>
          </div>
        <% end %>
      </div>
      </div>
  </div>
</div>

<% if booked_flight.present? %>
  <table class="table table-striped table-hover my-4" id="available-flight-table">
    <thead>
      <tr>
        <th>STT</th>
        <th><%= t "airline_brand" %></th>
        <th><%= t "departure_time" %></th>
        <th><%= t "hour" %></th>
        <th><%= t "origin" %></th>
        <th><%= t "destination" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr class="py-5">
        <td class="td-pointer text-center"><%= 1 %></td>
        <td class="td-pointer">
          <p class="fw-bold"><%= booked_flight.airline_brand %></p>
          <p class="fst-italic text-success">
            (<%= @booking.flight_ticket.ticket_class %>)
            <%= @booking.flight_ticket.price %>$
            <%= t "per_one_ticket" %>
          </p>
        </td>
        <td class="td-pointer"><%= booked_flight.departure_time.strftime(Settings.datime_format_hour) %>h</td>
        <td class="td-pointer"><%= time_difference_in_hours_and_minutes(booked_flight.departure_time,booked_flight.arrival_time) %></td>
        <td class="td-pointer"><%= booked_flight.origin_place %></td>
        <td class="td-pointer"><%= booked_flight.destination %></td>
        <td>
          <span class="badge bg-info text-dark">#<%= booked_flight.flight_number %></span>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<h2 class="my-4 text-center"><%= t "change_your_password" %></h2>

<div class="container d-flex justify-content-center">
  <div class="w-50">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-group" }) do |f| %>

      <%= render "users/shared/error_messages", resource: resource %>

      <%= f.hidden_field :reset_password_token %>
      <div class="mb-3">
        <%= f.label :password, t("new_password"), class: "form-label fw-bold" %><br />
        <% if @minimum_password_length %>
          <em>(<%= t("minimum_password_length", count: @minimum_password_length) %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, t("confirm_new_password"), class: "form-label fw-bold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("change_my_password"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

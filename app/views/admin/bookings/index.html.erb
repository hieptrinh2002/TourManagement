<section class="intro">
  <div class="gradient-custom-1 h-100">
    <div class="mask d-flex align-items-center h-100">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="container">
              <div class="shadow-sm py-2 mb-3 bg-white rounded px-3">
                <%= render "search_form" %>
              </div>
            </div>
            <div class="table-responsive bg-white">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col"><%= t "stt" %></th>
                    <th scope="col"><%= t "tour_name" %></th>
                    <th scope="col"><%= t "customer_name" %></th>
                    <th scope="col"><%= t "num_passengers" %></th>
                    <th scope="col"><%= t "start_date" %></th>
                    <th scope="col"><%= t "total_amount" %></th>
                    <th style="col"><%= t "status" %></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.each_with_index  do |booking, index| %>
                    <%= render "booking", {booking: booking, index: index} %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="d-flex justify-content-end py-4">
      <%== pagy_nav(@pagy) %>
    </div>
  </div>
</section>

<%= form_for [:admin, @voucher] do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :expiry_date, class: "mb-2" %>
        <%= f.date_field :expiry_date, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :code, class: "mb-2" %>
        <%= f.text_field :code, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :percent_discount, class: "mb-2" %>
        <%= f.number_field :percent_discount, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :min_total_price, class: "mb-2" %>
        <%= f.number_field :min_total_price, class: "form-control" %>
      </div>

      <div>
        <% if @voucher.is_used %>
          <%= t "vouchers.is_used" %>
        <% else %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
        <%= link_to t("cancel"), admin_vouchers_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>

<div class="card-body my-3">
  <div class="container d-flex">
    <div class="rating d-flex align-items-center fs-4" style="color: #f39c12;">
      <span><%= tour.reviews.average_rating %>/ <%= Settings.digit_5 %></span>
      <span class="ms-2">
        <% eval(Settings.star_range).each do %>
        <i class="fa fa-star"></i>
        <% end %>
      </span>
    </div>
    <div class="mx-3">
      <%= link_to t("reviews.all", count: tour.reviews.total_ratings),
          tour_path, class: "px-3 btn btn-outline-secondary mx-2" %>
      <%= link_to t("reviews.stars", count: tour.reviews.total_ratings_by_star(Settings.digit_5), stars: Settings.digit_5),
          tour_path(star: Settings.digit_5), class: "px-3 btn btn-outline-secondary mx-2" %>

      <%= link_to t("reviews.stars", count: tour.reviews.total_ratings_by_star(Settings.digit_4), stars: Settings.digit_4),
          tour_path(star: Settings.digit_4), class: "px-3 btn btn-outline-secondary mx-2" %>

      <%= link_to t("reviews.stars", count: tour.reviews.total_ratings_by_star(Settings.digit_3), stars: Settings.digit_3),
          tour_path(star: Settings.digit_3), class: "px-3 btn btn-outline-secondary mx-2" %>

      <%= link_to t("reviews.stars", count: tour.reviews.total_ratings_by_star(Settings.digit_2), stars: Settings.digit_2),
          tour_path(star: Settings.digit_2), class: "px-3 btn btn-outline-warning mx-2" %>

      <%= link_to t("reviews.star", count: tour.reviews.total_ratings_by_star(Settings.digit_1), stars: Settings.digit_1),
          tour_path(star: Settings.digit_1), class: "px-3 btn btn-outline-danger mx-2" %>
    </div>
  </div>
</div>
